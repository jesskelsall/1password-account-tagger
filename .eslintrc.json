{
  "extends": [
    "airbnb",
    "plugin:@typescript-eslint/recommended",
    "plugin:lodash-fp/recommended"
  ],
  "globals": {
    "commonjs": true,
    "jest": true,
    "node": true
  },
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint",
    "import",
    "lodash-fp"
  ],
  "root": true,
  "rules": {
    "arrow-body-style": [
      "error",
      "as-needed"
    ],
    "array-element-newline": [
      "error",
      {
        "multiline": true,
        "minItems": 3
      }
    ],
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "ts": "never"
      }
    ],
    "import/prefer-default-export": "off",
    "no-console": [
      "error",
      {
        "allow": [
          "error",
          "info",
          "warn"
        ]
      }
    ],
    "object-property-newline": "error",
    "semi": [
      "error",
      "never"
    ]
  },
  "settings": {
    "import/parsers": {
      "@typescript-eslint/parser": [
        ".ts"
      ]
    },
    "import/resolver": {
      "typescript": {
        "alwaysTryTypes": true
      }
    },
    "react": {
      "version": "latest"
    }
  }
}